<ul class="list-unstyled">
  <% microposts.each do |micropost| %>
    <li class="media mb-3">
      <img class="mr-2 rounded" src="<%= gravatar_url(micropost.user, { size: 50 }) %>" alt="">
      <div class="media-body">
        <div>
          <%= link_to micropost.user.name, user_path(micropost.user) %> <span class="text-muted">投稿日時 <%= micropost.created_at %></span>
        </div>
        <div>
          <%= micropost.content %>
        </div>
        <div>
          <% if current_user == micropost.user %>
            <%= link_to "投稿削除", micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %>
          <% end %>
          <%= render 'favorites/favorite_button', micropost: micropost %>
          <%= link_to "投稿詳細", micropost %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate microposts %>
</ul>